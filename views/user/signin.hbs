<div class="row">
  <div class="col-md-4 col-md-offset-4 sign-up-panel">
    <h1>Sign In</h1>
    <form action = "/user/signin" method = "post">
      {{#if fillFields}}
        <div class="warning">
          {{fillFields}}
        </div>
      {{/if}}
      {{#if invalidUser}}
        <div class="warning">
          {{invalidUser}}
        </div>
      {{/if}}
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">E-mail</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="E-mail" name="inputEmail">
        </div>
      </div>
      {{#if invalidPass}}
        <div class="warning">
          {{invalidPass}}
        </div>
      {{/if}}
      <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" placeholder="Password" name="inputPassword">
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Sign In</button>
    </form>
  </div>
