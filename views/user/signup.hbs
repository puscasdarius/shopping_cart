<div class="row">
  <div class="col-md-4 col-md-offset-4 sign-up-panel">
    <h1>Sign Up</h1>
    <form action = "/user/signup" method = "post">
      {{#if existingUser}}
        <div class="warning">
          {{existingUser}}
        </div>
      {{/if}}
      {{#if warning}}
        <div class="warning">
          Please insert all fields!
        </div>
      {{/if}}
          <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="test" class="form-control" placeholder="Johny Bravo..." name="inputName">
            </div>
          </div>  <div class="form-group row">
          <label for="inputPassword" class="col-sm-2 col-form-label">Adress</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="str.lt.col.Pretorian..." name="inputAdress">
          </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Phone Number</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" placeholder="0751435183" name="inputPhone">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">E-mail</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" placeholder="juhny_bravo@server.com" name="inputEmail">
            </div>
        </div>
      {{#if invalidPass}}
        <div class="warning">
          Password don't match!
        </div>
      {{/if}}
      <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" placeholder="***********" name="inputPassword">
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
  </div>
</div>
